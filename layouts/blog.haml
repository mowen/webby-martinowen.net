  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-type" }
    %meta{ :name => "description", :content => "The blog of Martin Owen a web developer in Liverpool, UK." }
    %title The blog of Martin Owen, a web developer in Liverpool, UK
    = render :partial => "/default_includes"
  %body.bp
    .container
      #header
        = render :partial => "/header"
      #main
        = render :partial => "/content"
      #sidebar
        = render :partial => "/sidebar"
      #footer
        = render :partial => "/footer"
    = render :partial => "/google_analytics"