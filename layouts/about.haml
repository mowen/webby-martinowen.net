<!--[if (gte IE 9)|!(IE)]><!-->
%html.no-js
  <!--<![endif]-->
  %head
    %meta{ :charset => "utf-8" }/
    
    -# 
      Always force latest IE rendering engine (even in intranet) & Chrome Frame
      Remove this if you use the .htaccess
    %meta{ :content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }/
    
    %meta{ :content => "About Martin Owen, a web developer in Liverpool, UK", :name => "description" }
    %meta{ :content => "Martin Owen", :name => "author" }/
    %title= "About | Martin Owen"
    
    -# Mobile viewport optimized: j.mp/bplateviewport
    %meta{ :content => "width=device-width, initial-scale=1.0", :name => "viewport" }/
    
    -# Place favicon.ico and apple-touch-icon.png in the root of your domain and delete these references
    -# %link{ :href => "/images/favicon.ico", :rel => "shortcut icon" }/
    -# %link{ :href => "/images/apple-touch-icon.png", :rel => "apple-touch-icon" }/
    
    -# CSS: implied media="all"
    %link{ :href => "/stylesheets/style.css?v=1", :media => "all", :rel => "stylesheet" }/
    
    -# Uncomment if you are specifically targeting less enabled mobile browsers
    -# %link{ :href => "/css/handheld.css?v=1", :media => "handheld", :rel => "stylesheet" }/
    
    -# All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects
    %script{ :src => "/js/modernizr.min.js" }

    = render :partial => "/default_includes"
    
  %body.bp{ :lang => "en" }
    .container
      #header
        = render :partial => "/header"
      #main
        = render :partial => "/content"
      #sidebar
        = render :partial => "/social_network_links"
      #footer
        = render :partial => "/footer"
      
    -# 
      Javascript at the bottom for fast page loading
      Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary
    %script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" }
    :javascript
      !window.jQuery && document.write(unescape('%3Cscript src="js/jquery.min.js"%3E%3C/script%3E'))
    
    %script{ :src => "/js/plugins.js?v=1" }
    %script{ :src => "/js/script.js?v=1" }
    
    /[if lt IE 7 ]
      %script{ :src => "/js/dd_belatedpng.js" }
      :javascript
        //DD_belatedPNG.fix('img, .png_bg');
        
    -#  asynchronous google analytics: mathiasbynens.be/notes/async-analytics-snippet
    = render :partial => "/google_analytics"
